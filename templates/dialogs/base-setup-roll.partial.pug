div.form-group
		label #{tr('V5E.Modifier')}
		input(type="number", name="modifier", value=(modifier))

div.form-group
	label #{tr('V5E.Difficulty')}
	select(name="difficulty")
		each value, key in CONFIG.V5E.Difficulties
			-;
			option(value=(key), selected=((+key) === difficulty)) #{value}
